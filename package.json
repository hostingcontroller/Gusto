{
  "name": "@hc/orchestrator",
  "private": true,
  "version": "0.0.11",
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "start": "npx tsx ./src/app.tsx",
    "dev": "nodemon",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "7.15.0",
    "@typescript-eslint/parser": "7.15.0",
    "autoprefixer": "10.4.19",
    "eslint": "8.57.0",
    "nodemon": "^3.1.4",
    "prettier": "3.3.2",
    "ts-node": "10.9.2",
    "tsx": "4.19.1",
    "typescript": "5.5.3"
  },
  "nodemon": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node ./src/app.tsx"
  }
}
